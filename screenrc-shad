# bindings, press ^a and key
bind ~ activity "activity in %n (%t) [%w:%s]~"
bind * activity "activity in %n (%t) [%w:%s]"
bind z screen -t 'ROOT' su
bind L screen -t 'LOG' sudo /usr/bin/tail -f /var/log/everything/current
bind K source $HOME/.screenrc
bind H screen -t 'HTOP' htop

# shad only
bind n screen -M -t 'MAILCHECK' $HOME/bin/updatemail.sh
bind m screen -M -t 'MUTT' $HOME/bin/mutt.sh -y
bind P screen -t 'PAL' $HOME/bin/pal.sh
bind [ screen -t 'PAL+' pal --color -f $HOME/.pal/pal.conf -m


