#bindkey -k k6 select 5 # F6 = screen 5
#bindkey -k k7 select 6 # F7 = screen 6
#bindkey -k k8 select 7 # F8 = screen 7
# f12 = next, f11 = prev
bindkey -k F1 prev
bindkey -k F2 next

# select an open window direct with ALT+ 0-9 
bindkey "^[1" select 1
bindkey "^[2" select 2
bindkey "^[3" select 3
bindkey "^[4" select 4 
bindkey "^[5" select 5 
bindkey "^[6" select 6 
bindkey "^[7" select 7 
bindkey "^[8" select 8 
bindkey "^[9" select 9 
bindkey "^[0" select 0 

