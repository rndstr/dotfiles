[user]
  email = r@rndstr.org
  name = Roland Schilter
  editor = vim
[core]
  whitespace = trailing-space,space-before-tab,cr-at-eol,tab-in-indent
  editor = vim
[merge]
  tool = gvimdiff
[branch]
  autosetuprebase = always
[push]
  default = upstream
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[color "status"]
  added = green
  changed = yellow
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[web]
  browser = opera
[diff]
  mnemonicprefix = true
[alias]
  a = commit --all
  ap = add --patch
  cp = checkout --patch
  co = checkout
  pr = pull --rebase
  br = branch -v
  ci = commit
  s = status -sb
  sl = stash list
  sp = stash pop
  sd = diff stash@{0}
  lg = log --graph --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr) %C(blue)%an%Creset' --abbrev-commit --date=relative
  lp = log -p
  lw = whatchanged
  d = diff
  dc = diff --cached
  changes = log -p ..origin
  ds = stash show -u
  df = diff ..origin
  sm = submodule
  unstage = reset HEAD --
  undo = reset --soft HEAD^
  pum = !"git fetch -v origin; git fetch -v upstream; git merge upstream/master"
  pur = !"git fetch -v origin; git fetch -v upstream; git rebase upstream/master"
  puh = push origin HEAD
  rc = rebase --continue

